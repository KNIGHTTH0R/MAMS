<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="MAMS Author Article List">
		<message>Author article list</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_mams/models/fields">
			<field name="secid" type="Secs" description="COM_MAMS_FIELD_SELECT_SEC_DESC" label="COM_MAMS_FIELD_SELECT_SEC_LABEL" />
		</fieldset>
		<fieldset name="request" addfieldpath="/administrator/components/com_mams/models/fields">
			<field name="autid" type="Authors" description="COM_MAMS_FIELD_SELECT_AUT_DESC" label="COM_MAMS_FIELD_SELECT_AUT_LABEL" required="true" />
		</fieldset>
	</fields>
	<fields name="params">

	<!-- Basic options. -->
		<fieldset name="basic" label="COM_MAMS_FIELDSET_MORE_OPTIONS_LABEL">
			<field name="show_bio" type="radio" description="COM_MAMS_FIELD_SHOW_BIO_DESC" label="COM_MAMS_FIELD_SHOW_BIO_LABEL" default="0">
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
			</field>
			<field name="items_page" type="text" description="COM_MAMS_FIELD_ITEMSPERPAGE_DESC" label="COM_MAMS_FIELD_ITEMSPERPAGE_LABEL" default="10"></field>
		</fieldset>
	</fields>
</metadata>

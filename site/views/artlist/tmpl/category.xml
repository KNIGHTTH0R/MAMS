<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="MAMS Category Article List">
		<message>Category article list</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_mams/models/fields">
			<field name="secid" type="Secs" description="COM_MAMS_FIELD_SELECT_SEC_DESC" label="COM_MAMS_FIELD_SELECT_SEC_LABEL" required="true" />
		</fieldset>
		<fieldset name="request" addfieldpath="/administrator/components/com_mams/models/fields">
			<field name="catid" type="Cats" description="COM_MAMS_FIELD_SELECT_CAT_DESC" label="COM_MAMS_FIELD_SELECT_CAT_LABEL" required="true" />
		</fieldset>
	</fields>
	<fields name="params">

	<!-- Basic options. -->
		<fieldset name="basic" label="COM_MAMS_FIELDSET_MORE_OPTIONS_LABEL">
			<field name="items_page" type="text" description="COM_MAMS_FIELD_ITEMSPERPAGE_DESC" label="COM_MAMS_FIELD_ITEMSPERPAGE_LABEL" default="10"></field>
		</fieldset>
	</fields>
</metadata>
